@using Entities.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Giden Kutusu</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Mesaj Durumu</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageId</th>
            <td>@item.Subject</td>
            <td>@item.ReceiverUserWriter.WriterName</td>
            <td> @(((DateTime)item.MessageDate).ToString("dd MMMM yyyy"))</td>
            <td>
                @if (item.MessageStatus)
                {
                    <span class="badge badge-info">Mesaj Okundu!</span>
                }
                else
                {
                    <span class="badge badge-success">Mesaj Okunmadı!</span>
                }
            </td>
            <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-warning">Mesajı Aç</a></td>
        </tr>
    }
</table>
<br />
<a href="/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Oluştur</a>

